{% endblock %}
{% block body %}

    <div class="container" >
        <h3 class="agileits-title w3title2">ajouter une reclamation</h3>

        <div class="row">

            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                <label for="observation">Sujet</label>
                {{ form_widget(form.sujet, {'attr': {'class': 'form-control','placeholder':'Observation','name':'type'}}) }}
            </div>
            <div class="form-group date">
                {{ form_label(form.message ) }}
                {{ form_widget(form.message ,{'attr': {'class':'form-control datepicker'}}) }}

            </div>



            <div class="form-group">
                <input type="submit" value="Ajouter votre reclamation" class=" btn-primary btn-lg btn-block"/>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
    <ul>
        <li>
            <a href="{{ path('adoption_index') }}">retour au liste des annoces</a>
        </li>
    </ul>
{% endblock %}

