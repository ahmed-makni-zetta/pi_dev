{% extends ":BackEnd:index.html.twig" %}

{% block container %}

<!-- Content Header (Page header) -->
<section class="content-header">
    <h1> Accueil:<span>  User List</span></h1>
</section>




    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Les Utilisateurs</h3>

                <div class="box-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

                        <div class="input-group-btn">
                            <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
                        </div>
                    </div>
                </div>

            </div>
                  <!-- /.box-header -->
            <div class="box-body table-responsive no-padding">
                <table class="table table-hover">
                    <tbody><tr>
                        <th class="text-center">Id</th>
                        <th class="text-center">User name</th>
                        <th class="text-center">Action</th>


                    </tr>
                    {% for user in users %}
                        <tr>
                            <td class="text-center"><a   href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                            <td class="text-center">{{ user.username }}</td>

                            <td class="text-center">
                                <a type="submit"  class="btn btn-primary" href="{{ path('user_show', { 'id': user.id }) }}">Plus d'information</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>

            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>



{% endblock %}
