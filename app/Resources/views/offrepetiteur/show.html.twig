        <script src="{{ asset('BackEnd/bower_components/moment/min/moment.min.js') }}"></script>
        <script src="{{ asset('BackEnd/bower_components/bootstrap-daterangepicker/daterangepicker.js') }}"></script>
        <script src="{{ asset('BackEnd/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js') }}"></script>
        <script src="{{ asset('BackEnd/bower_components/jquery-slimscroll/jquery.slimscroll.min.js') }}"></script>
        <script src="{{ asset('BackEnd/bower_components/fastclick/lib/fastclick.js') }}"></script>
        <script src="{{ asset('BackEnd/dist/js/adminlte.min.js') }}"></script>
        <script src="{{ asset('BackEnd/dist/js/pages/dashboard.js') }}"></script>
        <script src="{{ asset('BackEnd/dist/js/demo.js') }}"></script>


    </head>




    <div class="blog-bottom">
        <div class="container">
            <div class="col-sm-7 w3_agile_blog_bottom_right">
                <h5>User name : {{ offrePetiteur.description }}</h5>
                {#<h5>Adress : {{ vet.adresse }}</h5>#}
                <h3>Phone Number : {{ offrePetiteur.prix }}</h3>
                <h3>Phone Number : {{ offrePetiteur.etat }}</h3>
                <h3>Phone Number :{{ offrePetiteur.race }}</h3>



            </div>
            <div class="col-sm-5 w3_agile_blog_bottom_left">
                <img src="{{ asset('FrontEnd/images/s1.jpg') }}" alt="" class="img-responsive">
            </div>

            <div class="clearfix"> </div>



        </div>
    </div>
    {{ form_start(form) }}
    <div class="container">
        <h1>Commentaire et note </h1>

        <div class="row">
            <div class="col-md-10">
                <!-- Box Comment -->
                <div class="box box-widget">
                    <div class="box-header with-border">
                        <div class="user-block">
                            <img class="img-circle" src="{{ asset('FrontEnd/images/s1.jpg') }}"  alt="User Image">
                            <span class="username">{{ offrePetiteur.idMembre }}</span>
                            {{ form_widget(form.note) }}
                            <span class="description"></span>
                        </div>

                    </div>


                               {% for c in rait %}
                                            {% if c.commentaire!=null %}

                                                <div class="box-footer box-comments">
                                                    <div class="box-comment">
                                                        <!-- User image -->

                                                        <img class="img-circle img-sm"  src="{{ asset('FrontEnd/images/s1.jpg') }}"   alt="User Image">
                                                        <div class="comment-text">
                      <span class="username">
                                      {{ c.idMembre }}

                          <span class="text-muted pull-right">{{ c.datenote|date("M d,Y h:m") }}</span>
                      </span>

                                                            {% if c.commentaire!=null %}

                                                                comentaire : {{ c.commentaire }} </br>
                                                            {% endif %}
                                                        </div>
                                                    </div>

                                                </div>
                                            {% endif %}
                                        {% endfor %}

                                </div>

                            </div>
                        {#{% endif %}#}
                    {#{% endfor %}#}
                    <div class="box-footer">
                        {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

                        <form action="#" method="post">

                            <div class="img-push" data-width="500">
                                {{ form_widget(form.commentaire, {'attr': {'placeholder': 'Press enter to post ',
                                    'class':'form-control input-sm'}}) }}

                            </div>
                        </form>
                    </div>
                {{ form_widget(form.commentaire) }}
                <input type="submit" value="notee" style="display: none">
                {{ form_end(form) }}

            {% endif %}

                </div>



            </div>
        </div>
    </div>
    <div class="map">
        <iframe src="https://maps.google.com/maps?width=100%&height=600&hl=en&q=tunis+(pets)&ie=UTF8&t=&z=15&iwloc=B&output=embed" frameborder="0" scrolling="no" marginheight="0" marginwidth="0"></iframe>
    </div>
