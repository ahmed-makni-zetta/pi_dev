
{% extends ':FrontEnd:base.html.twig' %}




{% block stylesheets %}
    <style>
        body{background: url("https://fac.img.pmdstatic.net/fit/http.3A.2F.2Fwww.2Efemmeactuelle.2Efr.2Fvar.2Ffemmeactuelle.2Fstorage.2Fimages.2Factu.2Fnews-actu.2Fjob-de-reve-devenez-calineur-pour-chats-39705.2F14560357-1-fre-FR.2Fjob-de-reve-une-clinique-veterinaire-recherche-un-calineur-pour-chats.2Ejpg/748x372/quality/80/crop-from/center/job-de-reve-une-clinique-veterinaire-recherche-un-calineur-pour-chats.jpeg")
        no-repeat;}
    </style>
{% endblock %}
{% block body %}

    <div class="container" >
        <h3 class="agileits-title w3title2">envoyer une demande d'adoption</h3>

        <div class="row">

            {{ form_start(form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                <label for="message">message</label>
                {{ form_widget(form.message, {'attr': {'class': 'form-control','name':'message'}}) }}
            </div>
            <div class="form-group date">
                {{ form_label(form.dateDebut ) }}
                {{ form_widget(form.dateDebut ,{'attr': {'class':'form-control datepicker'}}) }}

            </div>
            <div class="form-group ">
                {{ form_label(form.dateFin ) }}
                {{ form_widget(form.dateFin ,{'attr': {'class':'form-control datepicker'}}) }}

            </div>

            <div class="form-group">
                <label for="observation">choisir votre  animal</label>

                <select name="animal" id="animal">

                {% for a in animal %}
                    <option value="{{ a.id }}">{{ a.nom }}</option>
                {% endfor %}
            </select>
            </div>
            <div class="form-group">
                <input type="submit" value="envoyer votre demande" class=" btn-primary btn-lg btn-block"/>
            </div>

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}



