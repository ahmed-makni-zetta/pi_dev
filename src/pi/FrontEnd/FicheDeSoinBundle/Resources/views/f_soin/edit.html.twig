{% extends ":FrontEnd:base.html.twig" %}

{% block body %}
    <div class="container" >
        <h3 class="agileits-title w3title2">Cr√©ation Fiche De Soin </h3>

        <div class="row">

            {{ form_start(edit_form, {'attr': {'class': 'form'}}) }}
            <div class="form-group">
                <label for="observation">Observation</label>
                {{ form_widget(edit_form.observation, {'attr': {'class': 'form-control','placeholder':'Observation','name':'observation'}}) }}
            </div>
            <div class="form-group date">
                {{ form_label(edit_form.prochainRDV ) }}
                {{ form_widget(edit_form.prochainRDV ,{'attr': {'class':'form-control datepicker'}}) }}

            </div>

            <div class="form-group">
                {{ form_label(edit_form.idAnimal ) }}
                {{ form_widget(edit_form.idAnimal , {'attr': {'class':'form-control'}})  }}
            </div>

            <div class="form-group">
                {{ form_label(edit_form.medicament ) }}
                <div class="input-group">
                    <span class="input-group-addon">@</span>
                    {{ form_widget(edit_form.medicament, {'attr': {'placeholder': 'Medicament ','class':'form-control'}})  }}
                </div>
            </div>
            <div class="form-group row col-md-6" >
                <input type="submit" value="Edit" class=" btn-primary btn-lg "/>
                <input type="button" value="Cancel" class=" btn-danger btn-lg "/>
            </div>
            {{ form_end(edit_form) }}
        </div>
    </div>
{% endblock %}
