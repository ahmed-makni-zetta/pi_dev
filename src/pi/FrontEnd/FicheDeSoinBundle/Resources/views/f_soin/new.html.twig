{% block body %}

        <div class="container" >
            <h3 class="agileits-title w3title2">Cr√©ation Fiche De Soin </h3>

            <div class="row">

                {{ form_start(form, {'attr': {'class': 'form'}}) }}
           <div class="form-group">
               <label for="observation">Observation</label>
              {{ form_widget(form.observation, {'attr': {'class': 'form-control','placeholder':'Observation','name':'observation'}}) }}
           </div>
                <div class="form-group date">
                    {{ form_label(form.prochainRDV ) }}
                    {{ form_widget(form.prochainRDV ,{'attr': {'class':'form-control datepicker'}}) }}

                </div>

                <div class="form-group">
                        {{ form_label(form.idAnimal ) }}
                        {{ form_widget(form.idAnimal , {'attr': {'class':'form-control'}})  }}
                </div>

                <div class="form-group">
                        {{ form_label(form.medicament ) }}
                    <div class="input-group">
                        <span class="input-group-addon">@</span>
                        {{ form_widget(form.medicament, {'attr': {'placeholder': 'Medicament ','class':'form-control'}})  }}
                    </div>
                </div>
                <div class="form-group">
                        <input type="submit" value="Ajouter" class=" btn-primary btn-lg btn-block"/>
                </div>

                {{ form_end(form) }}
            </div>
        </div>

{% endblock %}

