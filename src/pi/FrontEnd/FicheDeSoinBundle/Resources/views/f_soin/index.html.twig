{% extends 'base.html.twig' %}

{% block body %}
    <h1>F_soins list</h1>

    <table border="4" style="background-color: #31b0d5">
                <tr>
                    <td>ID</td>
                    <td>Observation</td>
                    <td>Medicament</td>
                    <td>Datecreation</td>
                    <td>Prochainrdv</td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
        {% for f_soin in f_soins %}
                <tr>
                    <td>{{ f_soin.id }}</td>
                    <td>{{ f_soin.observation }}</td>
                    <td>{{ f_soin.medicament }}</td>
                    <td>{% if f_soin.dateCreation %}{{ f_soin.dateCreation|date('Y-m-d') }}{% endif %}</td>
                    <td>{% if f_soin.prochainRDV %}{{ f_soin.prochainRDV|date('Y-m-d') }}{% endif %}</td>
                    <td><a href="{{ path('f_soin_show', { 'id': f_soin.id }) }}">show</a></td>
                    <td><a href="{{ path('f_soin_delete', { 'id': f_soin.id }) }}">supprimer</a></td>
                    <td><a href="{{ path('f_soin_edit', { 'id': f_soin.id }) }}">edit</a></td>
                </tr>
        {% endfor %}
            </table>
    <ul>
        <li>
            <a href="{{ path('f_soin_new') }}">Create a new f_soin</a>
        </li>
    </ul>
{% endblock %}
