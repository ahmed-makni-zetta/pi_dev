{% extends 'base.html.twig' %}

{% block body %}
    <h1>F_soins list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Observation</th>
                <th>Medicament</th>
                <th>Datecreation</th>
                <th>Prochainrdv</th>
                <th>Etat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for f_soin in f_soins %}
            <tr>
                <td><a href="{{ path('f_soin_show', { 'id': f_soin.id }) }}">{{ f_soin.id }}</a></td>
                <td>{{ f_soin.observation }}</td>
                <td>{{ f_soin.medicament }}</td>
                <td>{% if f_soin.dateCreation %}{{ f_soin.dateCreation|date('Y-m-d') }}{% endif %}</td>
                <td>{% if f_soin.prochainRDV %}{{ f_soin.prochainRDV|date('Y-m-d') }}{% endif %}</td>
                <td>{{ f_soin.etat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('f_soin_show', { 'id': f_soin.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('f_soin_edit', { 'id': f_soin.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('f_soin_new') }}">Create a new f_soin</a>
        </li>
    </ul>
{% endblock %}
