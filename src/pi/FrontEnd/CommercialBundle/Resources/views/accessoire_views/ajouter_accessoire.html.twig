{% block body %}
<h1>Ajouter un accessoire</h1>
    <!--<form action="{{ path("ajouter_accessoire") }}" method="post" class="form">-->
        {{ form_start(form, {'attr': {'class': 'form'}}) }}

        <div class="form-group">
                    <span class="input-group-addon">Titre </span>
                        {{ form_widget(form.nom, {'attr': {'placeholder': 'Titre ','class':'form-control'}})  }}
            </div>

            <div class="form-group">
                    <span class="input-group-addon">Description </span>
                    {{ form_widget(form.description, {'attr': {'placeholder': 'description ','class':'form-control'}})  }}
            </div>

            <div class="form-group">
                    <span class="input-group-addon">prix </span>
                    {{ form_widget(form.prix, {'attr': {'placeholder': 'prix ','class':'form-control'}})  }}
            </div>

            <div class ="form-group">
                <span class="input-group-addon">categorie </span>
                {{ form_widget(form.categorie , {'attr': {'placeholder': 'categorie ','class':'form-control'}}) }}
            </div>

            <div class ="form-group">
                <span class="input-group-addon">validit√© </span>
                {{ form_widget(form.validite , {'attr': {'placeholder': 'validite ','class':'form-control'}}) }}
            </div>
            <div class ="form-group">
                <span class="input-group-addon">photo </span>
                {{ form_widget(form.photo , {'attr': {'placeholder': 'photo ','class':'form-control'}}) }}
            </div>

        <input type="submit" class="btn-primary btn-lg btn-block">
        <br/>

{{ form_end(form) }}
