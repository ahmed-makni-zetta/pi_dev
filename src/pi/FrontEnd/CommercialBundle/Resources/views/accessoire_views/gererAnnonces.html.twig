{% extends ":FrontEnd:base.html.twig" %}

{% block body %}

    <div class="container">

        <table class="table table-hover">
            <tbody><tr>
                <th>Type</th>
                <th>Image</th>
                <th>Titre</th>
                <th>Description</th>
                <th>Prix</th>
                <th>Categorie</th>
                <th>Date de publication</th>
            </tr>

            {% for  accessoire in accessoires %}
                <tr>
                    <td>Accessoire</td>
                    <td>
                        <a href="{{ path('gerer_annonce',{'produit':accessoire.id , 'type':0}) }}">
                            <img src="{{ asset('uploads/images/' ~ accessoire.photo) }}" alt=" " height="30px" width="40px" />
                        </a>
                    </td>
                    <td>{{ accessoire.nom }} </td>
                    <td>{{ accessoire.description }}</td>
                    <td>{{ accessoire.prix }}</td>
                    <td>{{ accessoire.categorie }}</td>
                    <td>{{ accessoire.datePublication|date('d M y') }}</td>
                    <td><a type="submit"class="btn btn-danger" href="{{ path('delete_Annonce',{'id':accessoire.id , 'type':0}) }}">X</a> </td>
                </tr>

            {% endfor %}
            {% for  nourriture in nourritures %}
                <tr>
                    <td>Nourriture</td>
                    <td>
                        <a href="{{ path('gerer_annonce',{'produit':nourriture.id , 'type':1}) }}">
                            <img src="{{ asset('uploads/images/' ~ nourriture.photo) }}" alt=" " height="30px" width="40px" />
                        </a>
                    </td>
                    <td>{{ nourriture.nom }} </td>
                    <td>{{ nourriture.description }}</td>
                    <td>{{ nourriture.prix }}</td>
                    <td>{{ nourriture.categorie }}</td>
                    <td>{{ nourriture.datePublication|date('d M y') }}</td>
                    <td><a type="submit"class="btn btn-danger" href="{{ path('delete_Annonce',{'id':nourriture.id , 'type':1 }) }}">X</a> </td>

                </tr>
            {% endfor %}
            </tbody></table>


    </div>
{% endblock %}
