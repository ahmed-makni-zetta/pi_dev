{% extends ":FrontEnd:base.html.twig" %}
{% block stylesheets %}
    <style>
        body{background: url("https://fac.img.pmdstatic.net/fit/http.3A.2F.2Fwww.2Efemmeactuelle.2Efr.2Fvar.2Ffemmeactuelle.2Fstorage.2Fimages.2Factu.2Fnews-actu.2Fjob-de-reve-devenez-calineur-pour-chats-39705.2F14560357-1-fre-FR.2Fjob-de-reve-une-clinique-veterinaire-recherche-un-calineur-pour-chats.2Ejpg/748x372/quality/80/crop-from/center/job-de-reve-une-clinique-veterinaire-recherche-un-calineur-pour-chats.jpeg")
        no-repeat;}
    </style>
{% endblock %}
{% block body %}
    <script type="text" src="{{ asset('FrontEnd/js/jquery-2.2.3.min.js') }}"></script>
    <script type="text" src="{{ asset('FrontEnd/js/ahmed_fadhlaoui.js') }}"></script>
    <h3 class="agileits-title w3title2">Les accessoires</h3>
    <input type="text" name="recherche" class="form-control" id="recherche" placeholder="Effectuer votre recherche">
    <br/>
    <div id="ahmed_resultat" style="margin-bottom: 20px">
        {% for animal in animaux  %}
            <div class="agile_gallery_grids" style="margin-bottom: 20px">
                <div class="col-sm-5 col-xs-5 agile_gallery_grid">
                    <div class="w3ls_gallery_grid">
                        <a href="{{ path('afficher_accessoire',{'page':animal.id}) }}" class="lsb-preview wthree_p_grid" data-lsb-group="header">
                            <img src="{{ asset('uploads/images/' ~ animal.photo) }}" alt=" " class="img-responsive" height="20" width="20"/>
                            <div class="agileinfo_content_wrap">
                                <div class="agileits_content">
                                    <h3>{{ animal.nom }}</h3>
                                    <p>{{ animal.description }}</p>
                                    <samp>{{ animal.prix }}</samp>
                                </div>
                            </div>
                        </a>
                    </div>
                </div>
            </div>
            <br/>
            <br/>
        {% endfor %}
    </div>
{% endblock %}

